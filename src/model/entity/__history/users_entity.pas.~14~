unit users_entity;

interface

//COM REGRAS DE NEGOCIO

type
  TUserModel = class
  private
    ID: Integer;
    Name : String;
    Role: Integer;
    Password: String;
    Email: String;
    Escola: Integer;
  public
    function GetID : Integer;
    procedure SetID(aID : Integer);
    function GetNome : String;
    procedure SetNome(aName : String);
    function GetPassword: String;
    procedure SetPassword(aPassword: String);
    function GetRole: Integer;
    procedure SetRole(aRole: Integer);
    procedure SetEmail(aEmail: String);
    function GetEmail : String;
    procedure SetEscola(aEscola: Integer);
    function GetEscola : Integer;


  end;

implementation

{ TUserModel }

function TUserModel.GetEmail: String;
begin
  Result := Self.Email;
end;

function TUserModel.GetEscola: Integer;
begin
  Result := Self.Escola
end;

function TUserModel.GetID: Integer;
begin
  Result := Self.ID;
end;

function TUserModel.GetNome: String;
begin
  Result := Self.Name
end;

function TUserModel.GetPassword: String;
begin
  Result := Self.Password;
end;

function TUserModel.GetRole: Integer;
begin
  Result := Self.Role;
end;

procedure TUserModel.SetEmail(aEmail: String);
begin
  Self.Email := aEmail;
end;

procedure TUserModel.SetEscola(aEscola: Integer);
begin

end;

procedure TUserModel.SetID(aID: Integer);
begin
  Self.ID := aID;
end;

procedure TUserModel.SetNome(aName: String);
begin
  Name := aName
end;

procedure TUserModel.SetPassword(aPassword: String);
begin
  Password := aPassword;
end;

procedure TUserModel.SetRole(aRole: Integer);
begin
  Self.Role := aRole;
end;

end.
